# Supabase Configuration (Frontend)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase CLI Access Token (for deployments)
SUPABASE_ACCESS_TOKEN=your_supabase_access_token

# Payment Gateway Configuration (Frontend)
VITE_G2PAY_MERCHANT_ID=your_g2pay_merchant_id

# Google Pay Configuration (Frontend)
VITE_GOOGLE_MERCHANT_ID=your_google_merchant_id
VITE_GOOGLE_PAY_MERCHANT_NAME=Your App Name
VITE_GOOGLE_PAY_GATEWAY=crst
VITE_GOOGLE_PAY_GATEWAY_MERCHANT_ID=your_g2pay_merchant_id

# ==========================================
# Edge Function Secrets (deployed to Supabase)
# ==========================================
# After filling in these values, run: ./deploy-secrets.sh
# This will deploy all secrets to your Supabase edge functions

# Email Notification Secrets (for send-notification-email function)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain
SMTP_FROM=your_smtp_from_email

# G2Pay Payment Secrets (for payment edge functions)
G2PAY_MERCHANT_ID=your_g2pay_merchant_id
G2PAY_SIGNATURE_KEY=your_g2pay_signature_key_here
G2PAY_GATEWAY_URL=https://payments.g2pay.co.uk
G2PAY_DIRECT_API_URL=https://payments.g2pay.co.uk

# Supabase Configuration (auto-injected by Supabase, but explicitly setting them is recommended)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Apple Pay Configuration (for validate-apple-merchant function)
APPLE_PAY_DISPLAY_NAME=Your App Name
APPLE_PAY_DOMAIN_NAME=your-domain.com

# Public Site URL (used in email templates for action buttons and links)
PUBLIC_SITE_URL=https://your-site.com
SITE_URL=https://your-site.com
